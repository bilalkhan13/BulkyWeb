@{
    ViewData["Title"] = "Delete Category";
}

@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3">

            <!-- All/ModeleOnly/None -->
            <div asp-validation-summary="All"></div>
            <div class="mb-3 row">
                <label asp-for="Name" class="p-1"></label>
                <input asp-for="Name" type="text" class="form-control" disabled />
            </div>
            <div class="mb-3 row">
                <label asp-for="DisplayOrder" class="p-1"></label>
                <input asp-for="DisplayOrder" type="number" class="form-control" disabled />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>

                </div>
            </div>
        </div>
    </form>
    </div>
</div>

